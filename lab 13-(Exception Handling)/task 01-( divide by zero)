#include <iostream>
#include<stdexcept>
using namespace std;

int main() {
    int a, b;
    cout << "Enter a number (a): ";
    cin >> a ;
    cout << "Enter a number (b): ";
    cin >> b;

    try {
        if (b == 0) {
            throw runtime_error("Division by zero is not allowed!");
        }
        cout << "Result: " << (a / b) << endl;
    } 
    
    catch (const runtime_error &e) {
        cout << "\nError! \n" << e.what() << endl;
    }

    return 0;
}
